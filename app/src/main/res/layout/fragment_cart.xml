<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:background="@drawable/bg_green_trans"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/backBtn"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/backBtn">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:fontFamily="@font/instrument_bold"
            android:layout_gravity="start"
            android:text="Carrito de compras"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/productsHeading"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:id="@+id/productsRV"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginTop="30dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/greenlite"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_gradient"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_things"
                android:backgroundTint="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/instrument_regular"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Subtotal"
                android:gravity="center"
                android:id="@+id/subtotalTitle"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/instrument_regular"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@+id/subtotalTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:text="EnvÃ­o"
                android:gravity="center"
                android:id="@+id/shipmentTitle"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/instrument_regular"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@+id/shipmentTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Descuento"
                android:gravity="center"
                android:id="@+id/discountTitle"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/instrument_bold_med"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@+id/discountTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Total"
                android:gravity="center"
                android:id="@+id/totalTitle"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/instrument_regular"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@+id/subtotalTitle"
                app:layout_constraintBottom_toBottomOf="@+id/subtotalTitle"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="$56.0"
                android:gravity="center"
                android:id="@+id/subtotal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/instrument_regular"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@+id/shipmentTitle"
                app:layout_constraintBottom_toBottomOf="@+id/shipmentTitle"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="$4.5"
                android:gravity="center"
                android:id="@+id/shipment"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/instrument_regular"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@+id/discountTitle"
                app:layout_constraintBottom_toBottomOf="@+id/discountTitle"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="$0"
                android:gravity="center"
                android:id="@+id/discount"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/instrument_bold_med"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@+id/totalTitle"
                app:layout_constraintBottom_toBottomOf="@id/totalTitle"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="$55.5"
                android:gravity="center"
                android:id="@+id/total"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16sp"
                android:gravity="center"
                android:id="@+id/confirmBtn"
                android:layout_margin="10dp"
                android:background="@drawable/bg_white"
                android:textColor="@color/green"
                android:fontFamily="@font/instrument_bold_med"
                android:layout_gravity="start"
                android:layout_marginTop="15dp"
                android:drawablePadding="5dp"
                android:text="Confirmar"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>