<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/bg_things"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:fontFamily="@font/instrument_bold"
        android:layout_gravity="start"
        android:text="Mi perfil"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:id="@+id/title"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_user"
        android:layout_marginTop="20dp"
        app:civ_border_color="@color/green"
        app:civ_border_width="3dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/profileImg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/instrument_bold"
        android:layout_gravity="center"
        android:id="@+id/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileImg"
        android:text="María Gómez"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="@font/instrument_regular"
        android:layout_gravity="center"
        android:id="@+id/email"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:text="mariagomez@gmail.com"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginHorizontal="50dp"
        android:fontFamily="@font/instrument_regular"
        android:layout_gravity="center"
        android:id="@+id/des"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:text="Amante de la moda y la decoración. Apasionada por encontrar tesoros únicos en ventas locales. Siempre buscando la mejor oferta."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/des">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingVertical="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/instrument_bold"
            android:gravity="center|start"
            android:text="Sobre mí"
            android:id="@+id/about"
            android:drawableEnd="@drawable/ic_farward"
            android:drawablePadding="10dp"
            app:drawableStartCompat="@drawable/ic_account" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingVertical="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/instrument_bold"
            android:gravity="center|start"
            android:text="Mis direcciones"
            android:drawablePadding="10dp"
            app:drawableStartCompat="@drawable/ic_location1"
            app:drawableEndCompat="@drawable/ic_farward" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingVertical="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/instrument_bold"
            android:gravity="center|start"
            android:text="Mis métodos de pago"
            android:drawablePadding="10dp"
            app:drawableStartCompat="@drawable/ic_card"
            app:drawableEndCompat="@drawable/ic_farward" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingVertical="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/instrument_bold"
            android:gravity="center|start"
            android:text="Ajustes"
            android:drawablePadding="10dp"
            app:drawableStartCompat="@drawable/ic_settings"
            app:drawableEndCompat="@drawable/ic_farward" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingVertical="10dp"
            android:id="@+id/signoutBtn"
            android:textColor="@color/black"
            android:fontFamily="@font/instrument_bold"
            android:gravity="center|start"
            android:text="Cerrar sesión"
            android:drawablePadding="10dp"
            app:drawableStartCompat="@drawable/ic_signout"
            app:drawableEndCompat="@drawable/ic_farward" />


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>