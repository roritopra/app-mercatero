<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:background="@drawable/bg_green_trans"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/backBtn"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/backBtn">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/instrument_bold"
            android:layout_gravity="start"
            android:text="Establezca su ubicaci칩n "
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/instrument_bold"
            android:layout_gravity="start"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            android:drawablePadding="5dp"
            android:text="Estos datos se mostrar치n en el perfil de tu cuenta por seguridad"
            app:drawableStartCompat="@drawable/ic_info" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="15dp"
            android:layout_marginHorizontal="10dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="10dp"
                android:paddingHorizontal="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/instrument_regular"
                    android:layout_gravity="start"
                    android:drawablePadding="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Tu ubicaci칩n"
                    android:gravity="center"
                    app:drawableStartCompat="@drawable/ic_location" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:id="@+id/okBtn"
                    android:background="@drawable/bg_ashwhite"
                    android:textColor="@color/green"
                    android:fontFamily="@font/instrument_bold_med"
                    android:layout_gravity="start"
                    android:layout_marginTop="15dp"
                    android:drawablePadding="5dp"
                    android:text="Establecer ubicaci칩n"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>